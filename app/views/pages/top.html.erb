<% if user_in_session? %>
<p><%= user_in_session.name %></p>
<p><%= link_to "サインout", sign_out_path %></p>
<div class="top_page">
  <h2>登録ユーザー一覧</h2>

  <div class="user_list">
    <table>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </table>
  </div>
</main>
<% else %>
<div class="sign_up_page">
  <div class="sign_up_form">
    <h2>TOPページ</h2>
      <p>ユーザー登録済みの方は<%= link_to "サインin", sign_in_path %></p>
      <p>ユーザーmi登録の方は<%= link_to "サインup", sign_up_path %></p>
  </div>
</div>
<% end %>